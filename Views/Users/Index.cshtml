@model IEnumerable<Users>
@{
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-4">Manage Users</h3>
                <p>
                    <button class="btn btn-danger mr-3">Create User</button>
                    <button class="btn btn-danger">Stop Work for all User</button>
                </p>
                <table id="Datatable" class="table table-striped table-bordered table-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th class="d-none">User ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Mobile No.</th>
                            <th>Activation Date</th>
                            <th>Status</th>
                            <th>Work Status</th>
                            <th>Form Submited</th>
                            <th>Caller Name</th>
                            <th>QC</th>
                            <th>Action</th>
                            <th>Log Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="d-none">@item.UserID</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.ActivationDate</td>
                                <td>@item.Status</td>
                                <td>
                                    <label class="switch ">
                                        <input type="checkbox" class="success" checked="@item.WorkStatus">
                                        <span class="slider round"></span>
                                    </label>
                                </td>
                                <td></td>
                                <td>@item.CallerName</td>
                                <td></td>
                                <td><form method="post"><button type="submit" class="border-0" asp-action="Delete" asp-route-id="@item.UserID"><i class="fas fa-trash-alt text-danger"></i></button></form></td>
                                <td><button class="border-0"><i class="fas fa-info-circle" aria-hidden="true"></i></button></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
